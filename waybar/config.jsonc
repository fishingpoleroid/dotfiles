// -*- mode: jsonc -*-
{
    "layer": "top",
    "position": "top",
    "height": 35,
    // "width": 1900,
    "spacing": 13,
    "expand-center": false,
    "expand-left": true,
    "expand-right": true,
    "margin-top": -3,
    "margin-left": -8,
    "margin-right": -8,
    "margin-bottom": 1,

    "modules-left": [
        "hyprland/workspaces",
        "hyprland/mode",
        "hyprland/scratchpad",
        "custom/media"
    ],
    "modules-center": [
    ],
    "modules-right": [
        "idle_inhibitor",
        "wireplumber",
        "power-profiles-daemon",
        "cpu",
        "memory",
        "temperature",
        "backlight",
        "keyboard-state",
        "battery",
        "clock",
        "tray",
        "custom/power"
    ],
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format": "{name}",
        "format-icons": {
            "1": "ÔÑ†",
            "2": "Ôâ®",
            "3": "ÔÑ°",
            "4": "ÔÜº",
            "5": "ÔÅµ",
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑë"
        }
    },
    "keyboard-state": {
